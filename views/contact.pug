extends base.pug

block style
        style 
            include ../static/style.css
            include ../static/stylecontact.css

block content
    div.container
        h1 Contact Us
        form(action="/contact", method="post", class="myForm") 
            input(type="text", class="myInput", name="name", placeholder="Enter your name" )
            input(type="number", class="myInput", name="phone", placeholder="Enter your Phone No." )
            input(type="email", class="myInput", name="email", placeholder="Enter your email address" )
            input(type="text", class="myInput", name="address", placeholder="Enter your address" )
            input(type="desc", class="myInput", name="concern", placeholder="Enter your concern" )
            button(class="btn")
                | Submit